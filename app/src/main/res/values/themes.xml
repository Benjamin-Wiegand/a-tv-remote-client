<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ATVRemote.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- primary color -->
        <item name="colorPrimary">#475D92</item>
        <item name="colorPrimaryVariant">#2F4578</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- secondary color -->
        <item name="colorSecondary">#575E71</item>
        <item name="colorSecondaryVariant">#404659</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- ui elements -->
        <item name="android:progressTint">#475D92</item>
        <item name="android:indeterminateTint">#475D92</item>
        <item name="colorOnSurface">@color/material_grey_850</item>                <!-- for BottomNavigationBar -->
        <item name="android:textColorHint">@color/material_grey_850</item>         <!-- fix text hint -->

        <!-- surfaces -->
        <item name="colorSurfaceContainer">#E1E2EC</item>
        <item name="android:windowBackground">#FFFFFF</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ATVRemote.VeryDark" parent="Theme.ATVRemote.Base">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurfaceContainer">@color/material_grey_900</item>
    </style>

    <style name="Theme.ATVRemote.Remote" parent="Theme.ATVRemote.VeryDark">
        <item name="colorSurfaceContainer">@color/black</item>
    </style>

    <!-- dynamic colors -->
    <style name="Theme.ATVRemote.DynamicColors" parent="Theme.ATVRemote.Base">
        <!-- primary color -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary30</item>

        <!-- secondary color -->
        <item name="colorSecondary">@color/material_dynamic_secondary40</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary30</item>

        <!-- ui elements -->
        <item name="android:progressTint">@color/material_dynamic_primary40</item>
        <item name="android:indeterminateTint">@color/material_dynamic_primary40</item>

        <!-- surfaces -->
        <item name="colorSurfaceContainer">@color/material_dynamic_neutral_variant90</item>
        <item name="android:windowBackground">@color/material_dynamic_neutral_variant100</item>
    </style>

    <style name="Theme.ATVRemote.VeryDark.DynamicColors" parent="Theme.ATVRemote.DynamicColors">
        <item name="android:windowBackground">@color/black</item>
        <item name="colorSurfaceContainer">@color/material_grey_900</item>
    </style>

    <style name="Theme.ATVRemote.Remote.DynamicColors" parent="Theme.ATVRemote.VeryDark.DynamicColors">
        <item name="colorSurfaceContainer">@color/black</item>
    </style>
</resources>