<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ATVRemote" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- primary color -->
        <item name="colorPrimary">@color/material_dynamic_primary40</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary30</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- secondary color -->
        <item name="colorSecondary">@color/material_dynamic_secondary40</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary30</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- ui elements -->
        <item name="android:progressTint">@color/material_dynamic_primary40</item>
        <item name="android:indeterminateTint">@color/material_dynamic_primary40</item>
        <item name="colorOnSurface">@color/material_gary</item>                <!-- for BottomNavigationBar -->
        <item name="android:textColorHint">@color/material_gary</item>         <!-- fix text hint -->

        <!-- surfaces -->
        <item name="colorSurfaceContainer">@color/material_dynamic_neutral_variant90</item>
        <item name="android:windowBackground">@color/material_dynamic_neutral_variant100</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ATVRemote.Remote" parent="Theme.ATVRemote.VeryDark">
        <item name="colorSurfaceContainer">@color/black</item>
    </style>

    <style name="Theme.ATVRemote.VeryDark" parent="Theme.ATVRemote">
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>