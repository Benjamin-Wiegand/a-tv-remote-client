<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ATVRemote.Base" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- primary color -->
        <item name="colorPrimary">#B0C6FF</item>
        <item name="colorPrimaryVariant">#6076AC</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- secondary color -->
        <item name="colorSecondary">#C0C6DC</item>
        <item name="colorSecondaryVariant">#70778B</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- ui elements -->
        <item name="android:progressTint">#B0C6FF</item>
        <item name="android:indeterminateTint">#B0C6FF</item>
        <item name="colorOnSurface">@color/gray_400</item>                <!-- for BottomNavigationBar -->

        <!-- surfaces -->
        <item name="colorSurfaceContainer">#2E3038</item>
        <item name="android:windowBackground">#191B23</item>

        <!-- no action bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ATVRemote.DynamicColors" parent="Theme.ATVRemote.Base">
        <!-- primary color -->
        <item name="colorPrimary">@color/material_dynamic_primary80</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_primary50</item>

        <!-- secondary color -->
        <item name="colorSecondary">@color/material_dynamic_secondary80</item>
        <item name="colorSecondaryVariant">@color/material_dynamic_secondary50</item>

        <!-- ui elements -->
        <item name="android:progressTint">@color/material_dynamic_secondary80</item>
        <item name="android:indeterminateTint">@color/material_dynamic_secondary80</item>

        <!-- surfaces -->
        <item name="colorSurfaceContainer">@color/material_dynamic_neutral_variant20</item>
        <item name="android:windowBackground">@color/material_dynamic_neutral_variant10</item>
        <item name="colorOnSurface">@color/material_dynamic_neutral_variant95</item>                <!-- BottomNavBar - inactive -->

        <!-- text -->
        <item name="android:textColorPrimary">@color/material_dynamic_neutral_variant95</item>
        <item name="android:textColorSecondary">@color/material_dynamic_neutral_variant80</item>
    </style>
</resources>