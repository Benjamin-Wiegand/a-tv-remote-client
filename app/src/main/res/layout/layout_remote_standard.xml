<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/media_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintWidth_min="192dp"
        app:layout_constraintBottom_toTopOf="@id/dpad"
        app:layout_constraintLeft_toLeftOf="@id/dpad"
        app:layout_constraintRight_toRightOf="@id/dpad"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        >

        <include
            android:id="@+id/media_summary"
            layout="@layout/layout_remote_component_media_display_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/layout_remote_component_media_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include
        android:id="@+id/dpad"
        layout="@layout/layout_remote_component_dpad"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/media_section"
        app:layout_constraintBottom_toTopOf="@id/navigation_bar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constrainedHeight="true"
        />

    <include
        android:id="@+id/navigation_bar"
        layout="@layout/layout_remote_component_navbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_min="192dp"
        app:layout_constraintTop_toBottomOf="@id/dpad"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/dpad"
        app:layout_constraintRight_toRightOf="@id/dpad"
        />

</androidx.constraintlayout.widget.ConstraintLayout>