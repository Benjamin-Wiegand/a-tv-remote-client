<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    >

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

    <io.benwiegand.atvremote.phone.ui.view.RemoteImageButton
        android:id="@+id/prev_track_button"
        style="@style/Widget.Theme.ATVRemote.RemoteImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:contentDescription="@string/button_previous_track"
        app:srcCompat="@drawable/prev_track"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />

    <io.benwiegand.atvremote.phone.ui.view.RemoteImageButton
        android:id="@+id/pause_button"
        style="@style/Widget.Theme.ATVRemote.RemoteImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:contentDescription="@string/button_toggle_playing"
        app:srcCompat="@drawable/playpause"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        />

    <io.benwiegand.atvremote.phone.ui.view.RemoteImageButton
        android:id="@+id/next_track_button"
        style="@style/Widget.Theme.ATVRemote.RemoteImageButton"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_weight="0"
        android:contentDescription="@string/button_next_track"
        app:srcCompat="@drawable/next_track"
        />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        />

</LinearLayout>
